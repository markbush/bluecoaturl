<div class="bluecoat-form">
  <%= error_messages_for 'user' %>

  <fieldset>
    <legend>Change Password</legend>

    <% form_tag :action => :update_password, :id => @user do %>
      <p>
        <label for="user_old_password">Old:</label>
        <%= password_field :user, :old_password, :size => 60 %>
      </p>
      <%= render :partial => 'password' %>
      <%= submit_tag "Update", :class => :submit %>
    <% end %>
  </fieldset>
</div>
